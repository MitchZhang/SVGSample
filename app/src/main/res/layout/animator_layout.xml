<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:gravity="center"
    android:background="#000000"

    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:textSize="16sp"
                    android:textColor="#ffffff"
                    android:text="旋转"/>

                <ImageView
                    android:id="@+id/svg_triangle"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:src="@drawable/ani_triangle"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:textSize="16sp"
                    android:textColor="#ffffff"
                    android:text="Path变换"/>

                <ImageView
                    android:id="@+id/svg_duigou"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:src="@drawable/ani_duigou"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:textSize="16sp"
                    android:textColor="#ffffff"
                    android:text="裁剪动画"/>

                <ImageView
                    android:id="@+id/svg_star"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:src="@drawable/ani_start"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:textSize="16sp"
                    android:textColor="#ffffff"
                    android:text="裁剪动画,一步画图"/>

                <ImageView
                    android:id="@+id/svg_multi"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:src="@drawable/ani_multi_start"/>

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:textSize="16sp"
                    android:textColor="#ffffff"
                    android:text="Trim测试"/>


                <ImageView
                    android:id="@+id/svg_line"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:src="@drawable/ani_line"/>

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:textSize="16sp"
                    android:textColor="#ffffff"
                    android:text="Selector测试"/>


                <ImageView
                    android:id="@+id/svg_selector"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:src="@drawable/ani_selector_one"/>

            </LinearLayout>

        </LinearLayout>
    </ScrollView>


</LinearLayout>